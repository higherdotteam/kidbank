
  <%= form_for(@customer, url: sessions_path, method: 'post') do |f| %>
    <div class="field">
      <%= f.label 'First Name' %><br>
      <%= f.text_field :fname, id: 'fname'%>
    </div>
    <div class="field">
      <br/>
      <%= f.label 'Last Name' %><br>
      <%= f.text_field :lname %>
    </div>
    <div class="actions">
      <br/>
      <%= f.submit value: 'Login', class: 'btn btn-success' %>
    </div>
  <% end %>
