<%= form_for(@kid) do |f| %>
  <% if @kid.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@kid.errors.count, "error") %> prohibited this kid from being saved:</h2>

      <ul>
      <% @kid.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'My First Name Is' %><br>
    <%= f.text_field :fname %>
  </div>
  <div class="field">
    <%= f.label 'My Last Name Is' %><br>
    <%= f.text_field :lname %>
  </div>
  <div class="field">
    <%= f.label "My mom or dad's email is:" %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label 'I was born on' %><br>
    <%= f.date_select :dob, start_year: 4.years.ago.year-14, end_year: 4.years.ago.year %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
  </div>
